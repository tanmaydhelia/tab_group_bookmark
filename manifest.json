{
  "manifest_version": 3,
  "name": "Bookmark Tab Group",
  "version": "1.1",
  "description": "Right-click a tab group to bookmark all its tabs into a new folder.",
  "permissions": [
    "tabs",
    "tabGroups",
    "bookmarks",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
